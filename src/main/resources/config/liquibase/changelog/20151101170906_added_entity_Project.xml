<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Project.
    -->
    <changeSet id="20151101170906" author="jhipster">
        <createTable tableName="project">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
        
        <createTable tableName="project_department">
            <column name="departments_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="projects_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="projects_id, departments_id" tableName="project_department"/>

        <addForeignKeyConstraint baseColumnNames="projects_id"
                                 baseTableName="project_department"
                                 constraintName="fk_project_department_department_id"
                                 referencedColumnNames="id"
                                 referencedTableName="project"/>

        <addForeignKeyConstraint baseColumnNames="departments_id"
                                 baseTableName="project_department"
                                 constraintName="fk_department_department_project_id"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>
        
        <createTable tableName="project_user">
            <column name="users_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="projects_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="projects_id, users_id" tableName="project_user"/>

        <addForeignKeyConstraint baseColumnNames="projects_id"
                                 baseTableName="project_user"
                                 constraintName="fk_project_user_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="project"/>

        <addForeignKeyConstraint baseColumnNames="users_id"
                                 baseTableName="project_user"
                                 constraintName="fk_user_user_project_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>
        
    </changeSet>
</databaseChangeLog>
